<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%=book.title%>">
    </div>
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% author.forEach( author => { %>
            <% if(author.id === book.author){ %>
            <option selected value="<%=author.id%>"><%=author.name%></option>
            <% } else { %>
            <option value="<%=author.id%>"><%=author.name%></option>
            <% } %>
            <% }) %>
        </select>
    </div>
</div>


<div class="form-row">
    <div class="form-item">
        <label for="publish_date">Publish Date</label>
        <input type="date" name="publish_date" id="publish_date" value="<%=book.publishDate == null ? '' : 
    book.publishDate.toISOString().split('T')[0] %> ">
    </div>
    <div class="form-item">
        <label for="page_count">Page Count</label>
        <input type="number" name="page_count" id="page_count" min="1" value="<%=book.pageCount%>">
    </div>
</div>


<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" name="cover" class="book-cover filepond">
    </div>

    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%=book.description%></textarea>
        <!-- <input type="text" name="description" id="description" value=" "> -->
    </div>
</div>