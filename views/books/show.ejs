<h2 class="page-header"><%= book.title %> </h2>

<div>
    <img height="150" width="100" src="<%=book.coverImagePath%> " alt="<%=book.coverImageName%>">

    <div>
        <a href="/books/<%= book.id %>/edit ">Edit</a>
        <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
        <a href="/authors/<%= book.author.id %> ">View Author</a>
    </div>
</div>


<div>
    <div>
        Author: <%= book.author.name %> 
    </div>
    
    <div>
        Published Date: <%= book.publishDate.toDateString() %> 
    </div>

    <div>
        Page Count: <%= book.pageCount %> 
    </div>

    <div>
        Description: <%= book.description %> 
    </div>

</div>